<Page x:Class="WordsFromZ3R0.Pages.MainPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:WordsFromZ3R0.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="600" d:DesignWidth="800"
      Title="MainPage">

    <Grid>
        <StackPanel x:Name="stkpanel" HorizontalAlignment="Left" Height="160" Margin="350,160,0,0" VerticalAlignment="Top" Width="100">
            <Button x:Name="mainLogButton" Content="Zaloguj" HorizontalAlignment="Left" VerticalAlignment="Top" Width="100" Click="MainLogButton_Click" Margin="0,0,0,20"/>
            <Button x:Name="mainRegButton" Content="Zarejestruj się!" HorizontalAlignment="Left" VerticalAlignment="Top" Width="100" RenderTransformOrigin="0.368,0.682" Click="MainRegButton_Click" Margin="0,0,0,20"/>
            <Button x:Name="mainShitButton" Content="Bez Logowania" HorizontalAlignment="Left" VerticalAlignment="Top" Width="100" Margin="0,0,0,20" Click="MainShitButton_Click"/>
            <Button x:Name="mainOutButton" Content="Wyjście" HorizontalAlignment="Left" VerticalAlignment="Top" Width="100" Click="MainOutButton_Click"/>
        </StackPanel>

    </Grid>
</Page>
